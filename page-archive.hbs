{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

{{! Everything inside the #post tags pulls data from the page }}
{{#post}}

<header class="main-header post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
    <nav class="main-nav {{#if image}}overlay{{/if}} clearfix">
        <a class="back-button" href="{{@blog.url}}">
            <img src="{{@blog.logo}}" width="32px" height="32px"/> 
        </a>
        <a class="menu-ham ion-android-menu" href="#"></a>
        <ul id="dropdown" >
            <a class="ion-close-round" href="#"></a>    
            <li>
                <a href="{{@blog.url}}">{{@blog.description}}</a>
                <span class="logotize">{{@blog.title}}</span>
            </li>
            <li><a href="https://twitter.com/cooderange" target="_blank">@cooderange</a></li>
            <li><a href="{{@blog.url}}" >coderange.io</a></li>
            <li><a href="mailto:hi@coderange.io?subject=hi there!">say&nbsp;hi</a></li>
            <li><a href="/feed" target="_blank">rss feed</a></li>
            <li><hr class="overlord_nav"></li>
            <li><a href="{{@blog.url}}/aboutus/">about coderange</a></li>
        </ul>
        <a class="page-title-post" href="{{@blog.url}}">
            {{@blog.title}}
        </a>
    </nav>
</header>

<main class="content" role="main">
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
</main>
{{/post}}
